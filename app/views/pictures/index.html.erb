<div class="fluid-container">
  <div class="jumbotron text-center">
    <h1 align="center">
      <strong><%= link_to "#{current_user.username}", user_path(current_user) %></strong>
    </h1>
  </div>
</div>

<div class="row">
  <% @pictures.each do |picture|%>

  <div class="col-sm-3">
    <h5 align="center"><%= link_to "#{picture.title}", picture_path(picture) %></h5>
    <%=link_to  picture_path(picture)  do %>
    <%= image_tag (picture.image_url), class:"img-fluid img-round" %>
    <% end %>
    posted by:
    <%= picture.user.username %>
    at:
    <%=picture.created_at %>
  </div>
  <% end %>
</div>
