<%= flash[:notice] %>

<%= render "shared/header", page: "Add Picture" %>

<%= form_for @picture, html: { class: "form-horizontal center", align: "center" } do |f| %>
    <h1>Add a Picture</h1>

    <div class="form-group">
      <%= f.text_field :image_url, placeholder: "Image URL" %>
    </div>

    <div class="form-group">
      <%= f.text_field :title, placeholder: "Title" %>
    </div>

    <div class="form-group">
      <%= f.text_field :tags, value: nil, placeholder: "Tags" %>
    </div>

    <%= f.submit "Add Picture", class: 'btn btn-success btn-lg'%>
<% end %>

<br/>

<div align="center">
  <%= link_to "Cancel", user_path(current_user), class: 'btn btn-danger btn-lg' %>
</div>
