<%= render "shared/header", page: "Edit Profile" %>

<%= form_for @user, html: { class: "form-horizontal center", align: "center" } do |f| %>
  <h1>Edit Profile</h1>
  <div class="form-group">
    <%= f.text_field :username, :value => current_user.username, placeholder: "Username" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <%= f.label "Confirm password" %>
  <%= f.password_field :password_confirmation %><br/>
  <%= f.label :email %>
  <%= f.text_field :email , :value => current_user.email%><br/>
  <%= f.label :profile_pic %>
  <%= f.text_field :profile_pic, :value => current_user.profile_pic%> <br>
  <%= f.submit "Confirm", {class: 'btn btn-primary btn-lg'} %>
<% end %>
<div align="left">
  <%= link_to "Cancel", user_path(current_user), class: 'btn btn-danger btn-lg' %>
</div>
