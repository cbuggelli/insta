<div class="jumbotron text-center">
  <h1>Welcome to Insta!</h1>
  <% if !logged_in? %>
    <p>
      <a href="/users/new" class="btn btn-warning btn-lg">Sign Up</a>
      <a href="/pictures" class="btn btn-success btn-lg">View Pictures</a>
    </p>

  <div class="fluid-container">
    <div class="row">
    <h5 align="centered">
  <%= form_tag login_path do %>
  <%= label_tag 'Username'%>
  <%= text_field_tag 'user[name]' %><br/>
  <%= label_tag 'Password'%>
  <%= password_field_tag 'user[password]' %><br/>
  <%= submit_tag "Log In", :class => 'btn btn-primary' %>
  <% end %>
  </h5>
  </div>
  </div>
</div>

<% else %>
  <h2>You are logged in as <%= current_user.username %>. Click <%= link_to "here", logout_path, method: "DELETE" %> to log out.</h2>
  <h2><%= link_to "Back to all pictures", pictures_path %></h2>
  <h2><%= link_to "Back to your profile", user_path(current_user)%></h2>

<% end %>
<%= flash[:notice] %>
